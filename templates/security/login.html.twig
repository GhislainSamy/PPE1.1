{% extends 'base.html.twig' %}

{% block title %}Connecter Vous !{% endblock %}

{% block body %}
<form method="post" style="float: left;width: 250px;margin-left: 800px;">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <p style="
    margin-left: 65px;
    width: 132px;
    height: 112px;
    margin-bottom: 18px;
"><img src="{{ asset('build/images/logo_urc.png') }}"/> URC DRAVEIL    </p>
    
    <h1 class="h3 mb-3 font-weight-normal" style="
    text-align: center;
">Connecter Vous</h1>
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
    <a class="inscrire" href="{{path('user_new')}}">Ou Inscrivez-vous Ici !</a>



    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit" style="
    margin-left: 65px;
">
        Connexion
    </button>
</form>
{% endblock %}
